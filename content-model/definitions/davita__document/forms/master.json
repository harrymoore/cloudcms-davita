{
	"title": "Davita Document Communication",
	"engineId": "alpaca1",
	"fields": {
		"title": {
            "order": 1,
			"type": "text",
			"label": "Title",
			"required": true,
			"default": ""
		},
		"description": {
            "order": 2,
			"type": "textarea",
			"label": "Description",
			"default": ""
		},
		"metadata": {
            "order": 1000,
			"type": "array",
			"label": "Additional Metadata",
			"items": {
				"type": "object",
				"label": "Additional Metadata",
				"fields": {
					"name": {
						"type": "text",
						"label": "Name",
						"required": true,
						"default": ""
					},
					"value": {
						"type": "text",
						"label": "Value",
						"required": true,
						"default": ""
					}
				}
			}
		},
        "entitlements": {
            "order": 3,
            "type": "checkbox",
            "required": false,
            "multiple": true,
            "dataSource": {
                "connector": true,
                "config": {
                    "query": {
                        "_type": "davita:principal"
                    },
                    "mappings": {
                        "value": "title",
                        "text": "description"
                    }
                }
            }        
		},
		"document": {
            "order": 4,
			"type": "related-content",
			"label": "Document Content",
			"required": false,
			"uploadPath": "/files",
			"maxNumberOfFiles": 5
		}
	}
}
